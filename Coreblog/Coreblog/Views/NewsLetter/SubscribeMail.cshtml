
<div class="tech-btm">
    <h4 style="color:white">Mail bültenine abone olun</h4>
    <p>Teknoloji, yazılım ve diğer bloglar...</p>
    <form method="post">
        <input type="email" id="textmail" placeholder="Email" required="" name="Mail" class="tech-btm">
        <input type="submit" id="btn" value="Abpne Ol">
    </form>

</div>

<script type="text/javascript">

    $("#btn").click(function () {
        let values = {
            Mail: $("#textmail").val()
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>
