
<div class="comment-top">
    <h4>Yorum Yapın</h4>
    <div class="comment-bottom">
        <form asp-action="PartialAddComment" asp-controller="Comment" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Adınız-Soyadını" required="">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Konu" required="">

            <textarea class="form-control" type="text" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>

            @*<textarea class="form-control" name="" placeholder="Message..." required=""></textarea>*@
            <button type="submit" class="btn btn-primary submit">Ekle</button>
        </form>
    </div>
</div>