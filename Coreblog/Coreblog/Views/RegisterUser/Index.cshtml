@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="/Tema/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Tema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/Tema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="/Tema/css/animate.css" rel="stylesheet">
    <link href="/Tema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h2 style="color:black">Core 5.0</h2>

            </div>
            <h3 style="color:black">Kayıt Ekranı</h3>
            <hr style="color:black" />
            <p style="color:black">Yeni Bir hesap Oluşturma.</p>
           
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Adınız ve Soyadınız">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="E-Posta Adresiniz" required="">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Adınız">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifreniz" required="">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar" required="">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks">
                        <label>
                            <input type="checkbox"><i></i>
                            Kullanım şartlarını okudum kabul ediyorum.
                        </label>
                    </div>
                </div>
                <span class="text-danger"></span>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol!</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giriş Yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
            <p class="m-t"> <small>Asp.Net Core 5.0 Proje Kampı | Tüm hakları saklıdır. &copy; @DateTime.Now.Year</small> </p>



            <p class="m-t"> <small>Asp.Net Core 5.0 Proje Kampı || Tüm Hakkları Saklıdır</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/Tema/js/jquery-3.1.1.min.js"></script>
    <script src="/Tema/js/popper.min.js"></script>
    <script src="/Tema/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>

