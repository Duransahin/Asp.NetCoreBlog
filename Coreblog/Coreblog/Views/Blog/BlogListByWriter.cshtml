@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Blog Kategorisi</th>
        <th>Durum </th>
        <th>Sil </th>
        <th>Düzenle </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @if (item.BlogStatus == true)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-success">Pasif</span>
                }
            </td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger btn-sm">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning btn-sm">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary" style="margin-top:10px">Yeni Blog Oluştur</a>

