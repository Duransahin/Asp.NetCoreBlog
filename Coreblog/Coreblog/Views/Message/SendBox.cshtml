@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Mesajı Aç </th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.ReciverUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>

            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-danger btn-sm">Mesajı Aç</a></td>

        </tr>
    }

</table>
<a href="/Message/SendMessage/" class="btn btn-primary" style="margin-top:10px">Yeni Mesaj Oluştur</a>

